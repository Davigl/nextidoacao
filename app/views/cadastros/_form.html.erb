<%= form_with(model: cadastro, local: true, class: 'form-horizontal m-t-20') do |form| %>
<% if cadastro.errors.any? %>
<div id="error_explanation">
  <h3><%= pluralize(cadastro.errors.count, "erros") %> impediram que este cadastro fosse concluído. Verifique os campos e tente novamente: </h3>

  <ul>
    <% cadastro.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
  <div class="col-12">
    <label> ID do Cliente ENEL </label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :id_cliente_enel, id: :cadastro_id_cliente_enel, class: 'form-control', placeholder: 'ID do Cliente ENEL' %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Digito Verificador </label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :digito_verificador_cliente_enel, id: :cadastro_digito_verificador_cliente_enel, class: 'form-control', placeholder: 'Digito Verificador' %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12" >
    <label> Código Ocorrência </label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :codigo_ocorrencia, id: :cadastro_codigo_ocorrencia, class: 'form-control', placeholder: 'Código Ocorrência' %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Data </label>
  </div>
  <div class="col-12">
    <div class="well">
      <div>
        <%= form.date_field :data_ocorrencia, class: 'form-control', value: Time.now.strftime('%Y-%m-%d') %>
      </div>
    </div> 
 </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Valor</label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :valor, id: :cadastro_valor, class: 'form-control', placeholder: 'Valor', :step => 0.01 %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Número de Parcelas </label>
  </div>

  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :parcelas, id: :cadastro_parcelas, class: 'form-control', placeholder: 'Número de Parcelas'%>
    </div>
  </div>
</div>


<% unless current_page?('/cadastros/new') %>
<div class="form-group row">
 <div class="col-12">
  <label> Doador Ativo </label>

  <div class="input-group right-align">
    <%= form.check_box :doador_ativo, id: :doador_ativo%>
  </div>
</div>
</div>
<% end %>


<div class="form-group row">
 <div class="col-12">
  <label> Caso haja, digite o número do protocolo </label>
</div>

<div class="col-12">
  <div class="input-group">
    <%= form.text_area :livre, id: :cadastro_livre, class: 'form-control' %>
  </div>
</div>
</div>

<div class="form-group text-right m-t-20">
  <div class="col-xs-6">
    <div class="actions">
      <%= link_to 'Voltar', cadastros_path, class: 'btn float-left btn-primary waves-light' %>
      <%= form.submit 'Salvar', class: 'btn btn-primary btn-custom waves-light'%> 
    </div>  
  </div>
</div>

<% end %>