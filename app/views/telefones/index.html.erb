<div class="container quadro-cadastro">
  <p id="notice"><%= notice %></p>

<h1 class="flow-text center">Telefones</h1>

<table>
  <thead>
    <tr>
      <th class="flow-text">Codigo area</th>
      <th class="flow-text">Numero</th>
      <th class="flow-text">Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @telefones.each do |telefone| %>
      <tr>
        <td><%= telefone.codigo_area %></td>
        <td><%= telefone.numero %></td>
        <td><%= telefone.tipo %></td>
        <td><%= link_to 'Show', telefone %></td>
        <td><%= link_to 'Edit', edit_telefone_path(telefone) %></td>
        <td><%= link_to 'Destroy', telefone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <a href="telefones/new", class="btn-floating btn-large waves-effect waves-light green light-2"><i class="material-icons">add</i></a>


</div>