<div class="row">
	<div class="col l8  s12 m10 push-l2 push-m1 baixo-senha">
		<div class="container azul quadro fontes">
			<h4 class="center">Esqueceu sua senha?</h4>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= devise_error_messages! %>

			<div class="field fontes2">
				<%= f.label 'E-mail', class:'label' %><br />
				<%= f.email_field :email, autofocus: true, autocomplete: "E-mail",placeholder: "Informe seu e-mail" %>
			</div>

			<div class="actions">
				<%= f.submit "Redefinir senha", class:'btn right green lighten-2 white-text'%>
			</div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
