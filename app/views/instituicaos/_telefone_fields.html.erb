<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.min.js' %>
<script type="text/javascript" charset="utf-8"> 
	$('.telefone_mask').mask('(99) 9999-9999');
</script>

<div class="row">
	<div class="col m2">
		<label class="label"> Telefone</label>
		<%= f.text_field :numero, class: "telefone_mask" %>		
	</div>
	
	<div class="col m2">
		<%= f.label :codigo_area, "DDD",class:"label" %>
		<%= f.number_field :codigo_area %>
	</div>

	<%= link_to_remove_association "remover telefone", f, class: 'btn btn-primary' %>
</div>